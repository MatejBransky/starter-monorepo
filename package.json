{
  "private": true,
  "workspaces": [
    "app",
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "format": "lerna exec --stream --parallel -- prettier-eslint --write \"**/*.js\"",
    "clean": "lerna exec --stream --parallel -- rimraf build dist lib",
    "build:pkg": "lerna exec --stream --parallel --ignore app -- rollup -c ../rollup.config.js",
    "build:app": "lerna run --stream --scope app build",
    "build": "yarn build:pkg && yarn build:app",
    "start": "lerna run --stream --scope app start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/{src,tests}/**/*.js": [
      "prettier-eslint --write",
      "git add"
    ],
    "app/{src,tests}/**/*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-plugin-jest": "^21.17.0",
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "lint-staged": "^7.2.0",
    "prettier-eslint-cli": "^4.7.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.60.7",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0"
  }
}
