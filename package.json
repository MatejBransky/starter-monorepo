{
  "private": true,
  "workspaces": [
    "app",
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "format": "lerna exec --stream --parallel -- prettier-eslint --write \"**/*.js\"",
    "clean:pkg": "lerna exec --stream --parallel --ignore app -- rimraf dist lib",
    "build:pkg": "lerna exec --stream --parallel --ignore app -- rollup -c ../rollup.config.js",
    "build:app": "cd app && npm run build",
    "build": "run-s clean:pkg build:pkg build:app",
    "start": "cd app && npm start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/{src,tests}/**/*.js": [
      "prettier-eslint --write",
      "git add"
    ],
    "app/{src,tests}/**/*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-plugin-jest": "^21.17.0",
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
		"lint-staged": "^7.2.0",
		"npm-run-all": "^4.1.3",
    "prettier-eslint-cli": "^4.7.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.60.7",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0"
  }
}
